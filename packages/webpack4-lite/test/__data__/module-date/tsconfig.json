{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "jsx": "react-jsx",
        "module": "ESNext",
        "moduleResolution": "node",
        "outDir": ".build/lib",
        "removeComments": true,
        "sourceMap": true,
        "target": "ESNext",
    },
    "exclude": ["node_modules", ".build", "**/*.spec.ts", "**/*.spec.tsx", "**/*.d.ts"],
    "include": ["src"]
}
