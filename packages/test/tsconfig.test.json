{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "resolveJsonModule": true,
        "baseUrl": "./",
        "paths": {
            "@quatico/websmith-api": ["../api/src"],
            "@quatico/websmith-core": ["../core/src"],
            "@quatico/websmith-cli": ["../cli/src"]
        } /* A series of entries which re-map imports to lookup locations relative to the 'baseUrl'. */
    },
    "include": ["src/**/*.ts"]
}
