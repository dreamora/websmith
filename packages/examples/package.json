{
    "name": "@quatico/websmith-examples",
    "version": "0.2.2",
    "description": "A library of example addons for the websmith compiler",
    "author": "Quatico Solutions AG",
    "license": "MIT",
    "private": true,
    "main": "./lib/index.js",
    "types": "./lib/index.d.ts",
    "files": [
        "LICENSE",
        "README.md",
        "lib"
    ],
    "scripts": {
        "clean": "rimraf lib dist bin coverage",
        "lint": "eslint \"{src,test}/**/*.ts\" --fix --color",
        "build": "tsc",
        "execute": "websmith --addons example-generator,example-processor,example-transformer,example-result-processor -p tsconfig.execute.json",
        "watch": "tsc --watch",
        "test": "jest --color --verbose --coverage --passWithNoTests",
        "test:update-snapshots": "yarn test -u",
        "test:watch": "jest --color --watch",
        "dist": "cross-env-shell NODE_ENV=production \"yarn clean && yarn lint && yarn test && yarn build\""
    },
    "devDependencies": {
        "@quatico/websmith-api": "^0.2.2",
        "@quatico/websmith-compiler": "^0.2.2",
        "@types/jest": "^27.4.1",
        "@types/node": "16",
        "@types/react": "18.0.24",
        "@types/react-dom": "17.0.0",
        "@typescript-eslint/eslint-plugin": "^5.17.0",
        "@typescript-eslint/parser": "^5.17.0",
        "concurrently": "7.4.0",
        "cross-env": "7.0.3",
        "eslint": "^8.12.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-import-resolver-alias": "^1.1.2",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jest": "^27.2.1",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-testing-library": "^5.2.0",
        "husky": "8.0.1",
        "jest": "27.5.1",
        "prettier": "^2.6.2",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "rimraf": "3.0.2",
        "ts-jest": "27.1.4"
    },
    "dependencies": {
        "typescript": "4.9.5"
    },
    "engines": {
        "node": ">=16.x",
        "yarn": ">=1.20.x"
    }
}
