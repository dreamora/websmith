{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "module": "CommonJS",
        "outDir": "./lib",
        "typeRoots": ["@types", "./node_modules/@types", "../../node_modules/@types"] /* List of folders to include type definitions from. */,
        "noEmit": false,
        "moduleResolution": "node",
    },
    "exclude": ["src/**/*.spec.ts", "test/**/*.ts"],
    "include": ["src/**/*.ts"]
}
